<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:gravity="center_vertical"
                android:paddingLeft="10dp"
              android:paddingRight="10dp"
                android:background="@color/minebackgroundColor"
              android:layout_marginTop="3dp">


    <LinearLayout
        android:id="@+id/ll_item_allcate_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_item_allcate_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_category_5"/>
        <TextView
            android:id="@+id/tv_item_allcate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="热门"
            android:textColor="@color/gray"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@drawable/ic_drawable_divider"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="3dp"
        android:id="@+id/rc_item_allcate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/minebackgroundColor"
        >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_item_allcate_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部分类"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@color/write"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>