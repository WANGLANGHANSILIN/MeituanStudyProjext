<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:minHeight="48dp"
    >

    <Button
        android:id="@+id/bt_item_title_ocation_retrun"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="5dp"
        android:background="@mipmap/food_ic_actionbar_back"
        android:padding="15dp"/>


    <LinearLayout
        android:id="@+id/ll_item_title_ocation_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_lalala"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_item_title_ocation_inland"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="国内"
            android:layout_height="match_parent"
            android:background="@drawable/location_title_seletor_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@drawable/near_tag_textcolor"
            android:selectAllOnFocus="true"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_item_title_ocation_overseas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/location_title_seletor_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="海外"
            android:textColor="@drawable/near_tag_textcolor"
            android:textSize="22sp"/>
    </LinearLayout>

</RelativeLayout>