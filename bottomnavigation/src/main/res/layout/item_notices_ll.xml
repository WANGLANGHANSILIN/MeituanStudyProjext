<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:minHeight="100dp"
                android:padding="5dp"
    android:id="@+id/rl_item_notice">

    <TextView
        android:id="@+id/tv_notice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_notice_icon"
        android:layout_toRightOf="@+id/iv_notice_icon"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tv_notice_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/iv_notice_icon"
        android:layout_toRightOf="@+id/iv_notice_icon"
        android:text="TextView"
        android:textColor="@color/mineItemHraderColor"
        />

    <ImageView
        android:id="@+id/iv_notice_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_menu_gallery"/>

    <TextView
        android:id="@+id/tv_notice_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/iv_notice_icon"
        android:layout_toRightOf="@+id/iv_notice_icon"
        android:text="TextView"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/tv_notice_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_notice_name"
        android:layout_alignBottom="@+id/tv_notice_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/tv_notice_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_notice_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textColor="@color/gray"/>

    <Space
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        />
</RelativeLayout>