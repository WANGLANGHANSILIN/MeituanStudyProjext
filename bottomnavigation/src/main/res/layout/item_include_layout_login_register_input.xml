<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/write"
              android:gravity="center"
              android:orientation="vertical"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_include_acc_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="账号"
            android:textColor="@color/logintextColor"
            android:textSize="19sp"
            />

        <EditText
            android:id="@+id/ed_item_include_acc_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:hint="请输入手机号"
            android:inputType="numberSigned"
            android:textColor="@color/mineItemTextColor"
            android:textColorHint="@color/mineItemTextColor"
            android:textSize="19sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_include_acc_clean"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/passport_ic_clear_enabled"
                android:padding="5dp"
                android:textColor="@color/mineItemTextColor"
                android:textSize="19sp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/bt_item_include_authcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/mineItemTextColor"
                android:textSize="19sp"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_include_psd_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="密码"
            android:textColor="@color/logintextColor"
            android:textSize="19sp"
            />

        <EditText
            android:id="@+id/ed_item_include_psd_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/mineItemTextColor"
            android:textColorHint="@color/mineItemTextColor"
            android:textSize="19sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_include_psd_clean"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/passport_ic_clear_enabled"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/mineItemTextColor"
                android:textSize="19sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_item_include_authcode"
                android:layout_width="35sp"
                android:layout_height="25sp"
                android:padding="5dp"
                android:background="@mipmap/passport_ic_show_password"
                android:textColor="@color/mineItemTextColor"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_drawable_divider"/>

    <TextView
        android:id="@+id/tv_item_includ_acc_phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/mineItemHraderColor"
        android:gravity="center"
        android:padding="5dp"
        android:text="登录"
        android:textSize="22sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_item_includ_login_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="登录遇到问题?"
            android:textColor="@color/mineItemHraderColor"
            />

        <TextView
            android:id="@+id/tv_item_includ_login_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="登录即视为同意"
            android:textColor="@color/black"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_item_includ_login_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tv_item_includ_login_agree"
            android:layout_toRightOf="@id/tv_item_includ_login_agree"
            android:autoLink="web"
            android:text="《美团用户协议》"
            android:textColor="@color/mineItemHraderColor"
            android:textColorLink="@color/gren"
            android:visibility="invisible"
            />

    </RelativeLayout>


</LinearLayout>