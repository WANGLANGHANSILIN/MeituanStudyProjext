<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mineItemColor"
        android:gravity="center"
        android:minHeight="35dp"
        android:orientation="horizontal"
        android:padding="3dp">


    <TextView
        android:id="@+id/tv_item_mine_stay_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@mipmap/ic_category_1"
        android:gravity="center"
        android:text="待付款"
        android:textColor="@color/mineItemTextColor"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/tv_item_mine_stay_use"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@mipmap/ic_category_1"
        android:gravity="center"
        android:text="待使用"
        android:textColor="@color/mineItemTextColor"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/tv_item_mine_stay_evaluate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@mipmap/ic_category_1"
        android:gravity="center"
        android:text="待评价"
        android:textColor="@color/mineItemTextColor"
        android:textSize="19sp"
        />

    <TextView
        android:id="@+id/tv_item_mine_refund"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@mipmap/ic_category_1"
        android:gravity="center"
        android:text="退款/售后"
        android:textColor="@color/mineItemTextColor"
        android:textSize="19sp"
        />
    </LinearLayout>

    <Space
        android:id="@+id/space_item_mine_s"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="visible"/>

</LinearLayout>